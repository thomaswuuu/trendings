<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="../images/fire-curved.svg" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="../stylesheets/trends.css" />
    <link rel="stylesheet" href="../stylesheets/loader.css" />
    <link rel="stylesheet" href="../stylesheets/explore.css" />
    <link rel="stylesheet" href="../stylesheets/search.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script
      src="https://kit.fontawesome.com/af227668e7.js"
      crossorigin="anonymous"
    ></script>
    <title>Trendings</title>
  </head>
  <body>
    <header class="header">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header flex">
            <h1>
              <a class="navbar-brand" href="/trends"
                ><i
                  class="fa-solid fa-fire-flame-curved fa-lg"
                  style="color: #f89130"
                ></i>
                Trendings</a
              >
            </h1>
            <div class="dropdown">
              <a
                class="dropdown-toggle"
                data-toggle="dropdown"
                id="region"
                value="<%= geoLocation %>"
                ><%= regions[regions.findIndex((obj) => obj.name ==
                geoLocation)].value %> <span class="caret"></span
              ></a>
              <ul class="dropdown-menu">
                <% regions.forEach((region) => { %>
                <li>
                  <a href="/trends?geo=<%= region.name %>"
                    ><%= region.value %></a
                  >
                </li>
                <% }); %>
              </ul>
            </div>
            <form class="navbar-form navbar-left">
              <div class="form-group">
                <input
                  id="search"
                  type="text"
                  class="form-control"
                  placeholder="關鍵字搜尋"
                  style="font-size: 16px"
                />
              </div>
            </form>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <%- body %>
      <script type="text/javascript" src="../javascripts/global.js"></script>
    </main>
  </body>
</html>
